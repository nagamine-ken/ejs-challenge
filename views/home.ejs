<%- include('partials/header'); -%>
    <!-- <div class="wrapper"> -->
    <div class="wrapper px-5 py-5 my-5 text-center">
        <img class="d-block mx-auto mb-4" src="/images/paper-plane.png" alt="" width="100" height="100">
        <h1 class="display-5 fw-bold text-body-emphasis">The Daily Journal</h1>
        <div class="hero-class col-lg-12 mx-auto">
            <p class="lead mb-2">
                <%= startingContent %>
            </p>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <a type="button" class="btn btn-primary btn-lg px-4 gap-3" href="/compose">Compose!</a>
            </div>
        </div>

        <div class="container-fluid">
            <div class="wrapper">
                <% console.log(postsArray) %>
                    <% postsArray.forEach(function(post){ %>
                        <div class="spacer">
                            <h2>
                                <%= post.title %>
                            </h2>
                            <p>
                                <%= post.content.substring(0, 100) + "..." %>
                                    <a href="/post/<%= post.title %>">Read more</a>
                            </p>
                        </div>
                        <% }) %>
            </div>
        </div>
    </div>



    <%- include('partials/footer'); -%>